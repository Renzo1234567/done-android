<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.corpsarens2.proyecto3.FragmentTareas">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondos">

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="36dp"
            android:fontFamily="casual"
            android:text="Titulo:"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Edit_Titulo"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginEnd="47dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="80dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Ingrese un titulo para su tarea..."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Descripcion"
            android:layout_width="162dp"
            android:layout_height="34dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="casual"
            android:text="Descripcion:"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/Edit_Descripcion"
            app:layout_constraintStart_toStartOf="@+id/Edit_Titulo"
            app:layout_constraintTop_toBottomOf="@+id/Edit_Titulo" />

        <EditText
            android:id="@+id/Edit_Descripcion"
            android:layout_width="273dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:fontFamily="casual"
            android:gravity="top"
            android:hint="Ingrese una descripcion..."
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/Fecha"
            app:layout_constraintStart_toStartOf="@+id/Descripcion"
            app:layout_constraintTop_toBottomOf="@+id/Descripcion" />

        <TextView
            android:id="@+id/Fecha"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:fontFamily="casual"
            android:text="Fecha:"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/Edit_Fecha"
            app:layout_constraintStart_toStartOf="@+id/Edit_Descripcion"
            app:layout_constraintTop_toBottomOf="@+id/Edit_Descripcion" />

        <EditText
            android:id="@+id/Edit_Fecha"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginBottom="47dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Ingrese una fecha..."
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/Crear_Tarea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.022"
            app:layout_constraintStart_toStartOf="@+id/Fecha"
            app:layout_constraintTop_toBottomOf="@+id/Fecha" />

        <Button
            android:id="@+id/Crear_Tarea"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="casual"
            android:text="Crear Tarea"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Edit_Fecha" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
